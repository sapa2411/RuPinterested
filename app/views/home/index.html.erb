<div class="jumbotron center">

    <h1>Welcome to my Pinterested app</h1>

    <% if user_signed_in? %>
    <%= link_to 'List Pins', pins_path, class: 'btn btn-warning btn-lg' %>
    <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-primary btn-lg' %>
